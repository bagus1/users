<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>

        <td><%= link_to 'Show', user %></td>
        <% if can? :update, @user %>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
        <td><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

